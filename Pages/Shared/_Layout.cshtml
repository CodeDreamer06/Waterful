<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waterful!</title>

    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="~/lib/popper.min.js" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/normalize.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body onload="loadPage()">
    <div class="top-gradient container-fluid"></div>
    <div class="spinner-background"></div>
    <div class="spinner"><div></div><div></div><div></div><div></div></div>

    @*Navigation*@
    <header>
        <nav class="navbar mt-2">
            <a class="navbar-brand header mr-auto d-flex align-items-center gap-3" asp-page="Index">
                <img src="images/water.png" alt="Logo" class="d-inline-block align-top">
                Waterful!
            </a>
            <div class="nav user-select-none">
                <div class="current-stats">
                    @if (ViewData["DrankToday"] != null)
                    {
                        <p>@ViewData["DrankToday"]</p>
                        <p>Drank today</p>   
                    }
                </div>
                @if (ViewBag.ShowClose)
                {
                    <a asp-page="Index">
                        <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <rect width="40" height="40" fill="url(#pattern0)"/>
                            <defs>
                            <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                                <use xlink:href="#image0_162_36" transform="scale(0.01)"/>
                            </pattern>
                            <image id="image0_162_36" width="100" height="100" xlink:href="data:image/png;base64,"/>
                            </defs>
                        </svg>
                    </a>
                }
                else
                {
                    <a class="btn btn-primary btn--cta align-self-center" data-toggle="tooltip" data-placement="bottom" title="Log a new drink" asp-page="./Create">
                        <img src="images/plus icon.svg" alt="plus icon">
                    Add
                    </a>
                }
            </div>
          </nav>
    </header>

    <div class="container-fluid main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="user-select-none">
        <img src="images/C-sharp icon.png" alt="C-sharp logo">
        <p>Powered by C# Razor Pages</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>