@page
@model Waterful.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    ViewBag.ShowClose = true;
}

<section class="delete">
    <h1>Are you sure you didn’t drink that?</h1>
    <div class="d-flex">
        <div class="drink-option"><p>@Model.Water.Quantity</p></div>
        <div class="d-flex flex-column justify-content-between my-5">
            <div>
                <div class="type-badge mb-3">@(Model.Water.Type.ToString().AddSpacing())</div>
                <p>On @(Model.Water.Date.FormatLogDate())</p>
            </div>
            <form method="post">
                <input type="hidden" asp-for="Water.Id"/>
                <button type="submit" class="btn btn--accept">Yes</button>
            </form>
        </div>
    </div>
</section>